@page
@model ViewMachineModel
@{
    ViewData["Title"] = "Home page";
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>


    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Consumer</title>
</head>
<body>
    <h1>Items from API</h1>
    <div id="itemsContainer"></div>

    <script>
        // Fetch data from the API
        fetch('https://localhost:7130/Machines')
            .then(response => response.json())
            .then(data => {
                // Handle the data
                const itemsContainer = document.getElementById('itemsContainer');
                data.forEach(item => {
                    // Create HTML elements for each item
                    const itemElement = document.createElement('div');
                    itemElement.innerHTML = `
                    <p><strong>Machine Name</strong><h2>${item.name}</h2></p>
                    <p><strong>Machine Description:</strong> ${item.description}</p>
                    <p><strong>Category NAME:</strong> ${item.category.name}</p>
                  `;
                    itemsContainer.appendChild(itemElement);
                });
            })
            .catch(error => {
                console.error('Error fetching data:', error);
            });
    </script>
</body>
</html>
